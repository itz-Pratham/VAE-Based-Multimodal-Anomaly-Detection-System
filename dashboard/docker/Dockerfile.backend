FROM python:3.10-slim
WORKDIR /app

RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

# Paths are now relative to the Project Root
COPY dashboard/backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code and core ML logic
COPY dashboard/backend/ /app/dashboard/backend/
COPY src/ /app/src/

ENV PYTHONPATH=/app
EXPOSE 8000

CMD ["uvicorn", "dashboard.backend.main:app", "--host", "0.0.0.0", "--port", "8000"]